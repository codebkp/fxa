<div id="main-content" class="card choose-what-to-sync">
  {{^isTrailhead}}
  <div class="success visible success-email-created">{{#t}}%(email)s registered{{/t}}</div>
  <div class="error"></div>
  <div class="graphic graphic-choose-what-to-sync"></div>
  {{/isTrailhead}}

  <header>
    {{#isTrailhead}}
      <div class="step step-2"></div>
      <div class="error"></div>
      <div class="success visible success-email-created">{{#t}}%(email)s registered{{/t}}</div>
    {{/isTrailhead}}

    <h1 id="fxa-choose-what-to-sync-header">
      {{#isTrailhead}}
        {{#t}}Get the most out of your account{{/t}}
      {{/isTrailhead}}
      {{^isTrailhead}}
        {{#t}}Choose what to sync{{/t}}
      {{/isTrailhead}}
    </h1>
  </header>
  {{#isTrailhead}}
  <div class="graphic graphic-choose-what-to-sync"></div>
  {{/isTrailhead}}

  <section>

    <form id="choose-what-to-sync" novalidate>
      {{#isTrailhead}}
        <h2>{{#t}}Sync these everywhere you sign in{{/t}}</h2>
      {{/isTrailhead}}
      <div class="two-col-items">
        {{#engines}}
          <div class="input-row choose-what-to-sync-row">
            <input name="sync-content" id="sync-engine-{{id}}" type="checkbox" class="customize-sync" {{#checked}}checked="checked"{{/checked}} value="{{id}}" tabindex="{{tabindex}}" /><label class="fxa-checkbox__label" for="sync-engine-{{id}}">{{text}}</label>
          </div>
        {{/engines}}
      </div>
      {{#isTrailhead}}
        {{#isAnyNewsletterEnabled}}
        <header class="get-involved">
          <h2>{{#t}}Practical knowledge is coming to your inbox{{/t}}</h2>
          <h3>{{#t}}Sign up for more:{{/t}}</h3>
        </header>
        {{/isAnyNewsletterEnabled}}
        {{#isOnlineSafetyNewsletterEnabled}}
        <div class="input-row marketing-email-optin-row">
          <input id="online-safety-optin" type="checkbox" class="online-safety-optin"><label for="online-safety-optin">{{#t}}Be safer and smarter online{{/t}}</label>
        </div>
        {{/isOnlineSafetyNewsletterEnabled}}
        {{#isBetaNewsletterEnabled}}
        <div class="input-row marketing-email-optin-row">
          <input id="consumer-beta-optin" type="checkbox" class="consumer-beta-optin"><label for="consumer-beta-optin">{{#t}}Invite me to test new Mozilla products{{/t}}</label>
        </div>
        {{/isBetaNewsletterEnabled}}
        {{#isEmailOptInEnabled}}
        <div class="input-row marketing-email-optin-row">
          <input id="marketing-email-optin" type="checkbox" class="marketing-email-optin"><label for="marketing-email-optin">{{#t}}Take action to keep the internet healthy{{/t}}</label>
        </div>
        {{/isEmailOptInEnabled}}
      {{/isTrailhead}}
      <div class="button-row">
        {{#isTrailhead}}
          <button id="submit-btn" type="submit" tabindex="1" autofocus>{{#t}}Continue{{/t}}</button>
        {{/isTrailhead}}
        {{^isTrailhead}}
          <button id="submit-btn" type="submit" tabindex="1" autofocus>{{#t}}Save selections{{/t}}</button>
        {{/isTrailhead}}
        </div>
      <div class="links">
        <a href="#" id="back">{{#t}}Back{{/t}}</a>
      </div>
    </form>
  </section>
</div>
